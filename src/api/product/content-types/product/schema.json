{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": "E-commerce products with customization support"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "short_description": {
      "type": "string",
      "maxLength": 255
    },
    "sku": {
      "type": "string",
      "unique": true
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "original_price": {
      "type": "decimal",
      "min": 0
    },
    "cost_price": {
      "type": "decimal",
      "min": 0
    },
    "stock": {
      "type": "integer",
      "default": 0
    },
    "low_stock_threshold": {
      "type": "integer",
      "default": 5
    },
    "production_time": {
      "type": "integer",
      "default": 0
    },
    "is_active": {
      "type": "boolean",
      "default": true
    },
    "is_featured": {
      "type": "boolean",
      "default": false
    },
    "is_new": {
      "type": "boolean",
      "default": false
    },
    "is_on_sale": {
      "type": "boolean",
      "default": false
    },
    "customizable": {
      "type": "boolean",
      "default": false
    },
    "max_custom_text_length": {
      "type": "integer"
    },
    "custom_instructions": {
      "type": "text"
    },
    "meta_title": {
      "type": "string",
      "maxLength": 60
    },
    "meta_description": {
      "type": "string",
      "maxLength": 160
    },
    "tags": {
      "type": "json"
    },
    "weight": {
      "type": "decimal"
    },
    "dimensions": {
      "type": "json"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "images": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product-image.product-image",
      "mappedBy": "product"
    },
    "variants": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product-variant.product-variant",
      "mappedBy": "product"
    },
    "customization_schemas": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::customization-schema.customization-schema",
      "inversedBy": "products"
    }
  }
}
