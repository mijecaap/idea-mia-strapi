{
  "kind": "collectionType",
  "collectionName": "customization_schemas",
  "info": {
    "singularName": "customization-schema",
    "pluralName": "customization-schemas",
    "displayName": "Esquema de Personalización",
    "description": "Esquemas de personalización dinámicos para productos"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "description": {
      "type": "text",
      "maxLength": 500
    },
    "control_type": {
      "type": "enumeration",
      "enum": [
        "input_text",
        "textarea",
        "select",
        "radio_group",
        "checkbox",
        "color_picker",
        "number",
        "image_upload"
      ],
      "required": true,
      "default": "input_text"
    },
    "config": {
      "type": "json",
      "required": true
    },
    "preview_template": {
      "type": "string",
      "maxLength": 255
    },
    "is_active": {
      "type": "boolean",
      "default": true
    },
    "sort_order": {
      "type": "integer",
      "default": 0
    },
    "products": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product",
      "mappedBy": "customization_schemas"
    }
  }
}
